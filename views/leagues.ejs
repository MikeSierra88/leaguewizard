<%- include('partials/header'); -%>
<%- include('partials/navbar'); -%>
<div class="container">
    <div class="row mt-4">
        
    <% leagues.forEach((league) => { %>
        <div class="col-lg-6 mb-4">
          <div class="card shadow-sm bg-white rounded league-card" data-leagueid="<%=league._id%>">
            <div class="card-body">
                <h5 class="card-title text-center">
                  <%= league.name %>
                </h5>
              <div class="row">
                <div class="col-lg-6 mb-2 mb-lg-0 text-center"><%= league.teams.length  %> teams</div>
                <div class="col-lg-6 mb-2 mb-lg-0 text-center"><%= league.matches.length %> matches</div>
              </div>
            </div>
          </div>
        </div>
    <% }); %>
    </div>
</div>


<script src="/javascript/leaguesAggregate.js" nonce="<%=nonce%>" defer></script>
<%- include('partials/footer'); -%>